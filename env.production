# =============================================================================
# Production Environment Configuration
# =============================================================================
NODE_ENV=production
APP_ENV=production
APP_NAME=LegalDocs Automation Tool
APP_VERSION=1.0.0
APP_PORT=3000
APP_HOST=0.0.0.0
APP_URL=https://your-production-domain.com

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://username:password@your-db-host:5432/legal_docs_prod
TEST_DATABASE_URL=postgresql://username:password@your-db-host:5432/legal_docs_test
PROD_DATABASE_URL=postgresql://username:password@your-db-host:5432/legal_docs_prod

# Database Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=60000
DB_POOL_ACQUIRE_TIMEOUT=120000

# =============================================================================
# Security & Authentication
# =============================================================================
JWT_SECRET=your-production-jwt-secret-key-make-it-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Keys (for external services)
OPENAI_API_KEY=your-production-openai-api-key
GOOGLE_CLOUD_API_KEY=your-production-google-cloud-api-key

# CORS Settings
CORS_ORIGIN=https://your-production-domain.com,https://your-staging-domain.com
CORS_CREDENTIALS=true

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=your-production-sentry-dsn
SENTRY_ENVIRONMENT=production

# =============================================================================
# External Services
# =============================================================================
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-production-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=LegalDocs AI

# File Storage
STORAGE_PROVIDER=aws
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=legal-docs-storage-prod

# Document Processing
DOCUMENT_PROCESSING_ENABLED=true
MAX_FILE_SIZE=52428800 # 50MB for production
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# =============================================================================
# Feature Flags
# =============================================================================
AI_FEATURES_ENABLED=true
AUTO_SAVE_ENABLED=true
REAL_TIME_COLLABORATION=true
ANALYTICS_ENABLED=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Cache Configuration
# =============================================================================
REDIS_URL=redis://your-redis-host:6379
CACHE_TTL=3600 # 1 hour

# =============================================================================
# Production Settings
# =============================================================================
DEBUG=false
HOT_RELOAD=false
ENABLE_SWAGGER=false
ENABLE_GRAPHIQL=false 