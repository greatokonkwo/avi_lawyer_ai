# =============================================================================
# Testing Environment Configuration
# =============================================================================
NODE_ENV=test
APP_ENV=testing
APP_NAME=LegalDocs Automation Tool (Testing)
APP_VERSION=1.0.0
APP_PORT=3001
APP_HOST=localhost
APP_URL=http://localhost:3001

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/legal_docs_test
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/legal_docs_test
PROD_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/legal_docs_test

# Database Pool Settings
DB_POOL_MIN=1
DB_POOL_MAX=3
DB_POOL_IDLE_TIMEOUT=10000
DB_POOL_ACQUIRE_TIMEOUT=30000

# =============================================================================
# Security & Authentication
# =============================================================================
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# API Keys (for external services)
OPENAI_API_KEY=test-openai-api-key
GOOGLE_CLOUD_API_KEY=test-google-cloud-api-key

# CORS Settings
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=error
LOG_FORMAT=json
SENTRY_DSN=
SENTRY_ENVIRONMENT=test

# =============================================================================
# External Services
# =============================================================================
EMAIL_PROVIDER=console
SENDGRID_API_KEY=test-sendgrid-key
EMAIL_FROM=test@yourdomain.com
EMAIL_FROM_NAME=LegalDocs AI (Test)

# File Storage
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=test-aws-key
AWS_SECRET_ACCESS_KEY=test-aws-secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=legal-docs-storage-test

# Document Processing
DOCUMENT_PROCESSING_ENABLED=true
MAX_FILE_SIZE=5242880 # 5MB for testing
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# =============================================================================
# Feature Flags
# =============================================================================
AI_FEATURES_ENABLED=false
AUTO_SAVE_ENABLED=false
REAL_TIME_COLLABORATION=false
ANALYTICS_ENABLED=false

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000 # 1 minute for testing
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# Cache Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=300 # 5 minutes for testing

# =============================================================================
# Testing Settings
# =============================================================================
DEBUG=false
HOT_RELOAD=false
ENABLE_SWAGGER=false
ENABLE_GRAPHIQL=false 