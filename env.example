# =============================================================================
# Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values for your environment
# cp env.example .env

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=development
APP_ENV=dev
APP_NAME=LegalDocs Automation Tool
APP_VERSION=1.0.0
APP_PORT=3000
APP_HOST=localhost
APP_URL=http://localhost:3000

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL Database URLs for different environments
DATABASE_URL=postgresql://username:password@localhost:5432/legal_docs_dev
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/legal_docs_test
PROD_DATABASE_URL=postgresql://username:password@localhost:5432/legal_docs_prod

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# =============================================================================
# Security & Authentication
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Keys (for external services)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=json
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# =============================================================================
# External Services
# =============================================================================
# Email Service (SendGrid, AWS SES, etc.)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=LegalDocs AI

# File Storage (AWS S3, Google Cloud Storage, etc.)
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=legal-docs-storage

# Document Processing
DOCUMENT_PROCESSING_ENABLED=true
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# =============================================================================
# Feature Flags
# =============================================================================
AI_FEATURES_ENABLED=true
AUTO_SAVE_ENABLED=true
REAL_TIME_COLLABORATION=false
ANALYTICS_ENABLED=false

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Cache Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600 # 1 hour in seconds

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true
HOT_RELOAD=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true 