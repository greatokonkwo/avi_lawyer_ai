# =============================================================================
# Development Environment Configuration
# =============================================================================
NODE_ENV=development
APP_ENV=dev
APP_NAME=LegalDocs Automation Tool (Dev)
APP_VERSION=1.0.0
APP_PORT=3000
APP_HOST=localhost
APP_URL=http://localhost:3000

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/legal_docs_dev
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/legal_docs_test
PROD_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/legal_docs_prod

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# =============================================================================
# Security & Authentication
# =============================================================================
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Keys (for external services)
OPENAI_API_KEY=your-openai-api-key-dev
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key-dev

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173
CORS_CREDENTIALS=true

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=pretty
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# =============================================================================
# External Services
# =============================================================================
EMAIL_PROVIDER=console
SENDGRID_API_KEY=
EMAIL_FROM=dev@yourdomain.com
EMAIL_FROM_NAME=LegalDocs AI (Dev)

# File Storage
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=legal-docs-storage-dev

# Document Processing
DOCUMENT_PROCESSING_ENABLED=true
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# =============================================================================
# Feature Flags
# =============================================================================
AI_FEATURES_ENABLED=true
AUTO_SAVE_ENABLED=true
REAL_TIME_COLLABORATION=false
ANALYTICS_ENABLED=false

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# Cache Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true
HOT_RELOAD=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true 